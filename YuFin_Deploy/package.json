{
  "name": "mvp---yufin",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "tailwind": "tailwindcss -i ./styles.css -o ./dist/output.css --watch",
    "start": "vite",
    "electron": "electron .",
    "dist": "electron-builder",
    "dev:all": "concurrently \"npm run dev\" \"npm run start --prefix backend\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.2",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.8.0",
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "pkg": "^5.8.1",
    "tailwindcss": "^3.4.1",
    "vite": "^5.4.19"
  },
  "description": "Uma aplicação educacional gamificada para educação financeira infantil, inspirada no Duolingo, desenvolvida em React com Vite.",
  "main": "main.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.yufin.app",
    "productName": "YüFin",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
